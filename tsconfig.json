{
    "compilerOptions": {
        "target": "ES2024",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "./",
        "baseUrl": ".",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": ["server", "app.ts"],
    "exclude": ["node_modules"]
}
